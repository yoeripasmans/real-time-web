				<audio src="audio/instruments/snare.mp3" type="audio/mp3" controls="controls" data-sound-category="instrument" data-instrument="snare"></audio>
				<audio src="audio/instruments/perc.mp3" type="audio/mp3" controls="controls" data-sound-category="instrument" data-instrument="perc"></audio>
				<audio src="audio/instruments/perc2.mp3" type="audio/mp3" controls="controls" data-sound-category="instrument" data-instrument="perc2"></audio>
				<audio src="audio/instruments/perc3.mp3" type="audio/mp3" controls="controls" data-sound-category="instrument" data-instrument="perc3"></audio>
				<audio src="audio/instruments/bass.mp3" type="audio/mp3" controls="controls" data-sound-category="instrument" data-instrument="bass"></audio>
				<audio src="audio/instruments/bass2.mp3" type="audio/mp3" controls="controls" data-sound-category="instrument" data-instrument="bass2"></audio>
				<audio src="audio/instruments/808.mp3" type="audio/mp3" controls="controls" data-sound-category="instrument" data-instrument="bass3"></audio>
				<audio src="audio/instruments/vox.mp3" type="audio/mp3" controls="controls" data-sound-category="instrument" data-instrument="vox"></audio>
				<audio src="audio/instruments/vox2.mp3" type="audio/mp3" controls="controls" data-sound-category="instrument" data-instrument="vox2"></audio>
				<audio src="audio/instruments/vox3.mp3" type="audio/mp3" controls="controls" data-sound-category="instrument" data-instrument="vox3"></audio>
				<audio src="audio/instruments/vox4.mp3" type="audio/mp3" controls="controls" data-sound-category="instrument" data-instrument="vox4"></audio>
				<audio src="audio/instruments/horn.mp3" type="audio/mp3" controls="controls" data-sound-category="instrument" data-instrument="fx"></audio>
				<audio src="audio/instruments/fx.mp3" type="audio/mp3" controls="controls" data-sound-category="instrument" data-instrument="fx2"></audio>
			</div>

			<div class="loops">
				<h2>Loops</h2>
				<audio src="audio/loops/happy.wav" type="audio/wav" controls="controls" data-sound-category="loops" loop></audio>
				<audio src="audio/loops/walkit.mp3" type="audio/mp3" controls="controls" data-sound-category="loops" loop></audio>
				<audio src="audio/loops/plug.wav" type="audio/wav" controls="controls" data-sound-category="loops" loop></audio>
				<audio src="audio/loops/congrats.wav" type="audio/wav" controls="controls" data-sound-category="loops" loop></audio>
				<audio src="audio/loops/godsplan.mp3" type="audio/mp3" controls="controls" data-sound-category="loops" loop></audio>
				<audio src="audio/loops/organ.wav" type="audio/wav" controls="controls" data-sound-category="loops" loop></audio>
				<audio src="audio/loops/bankaccount.mp3" type="audio/mp3" controls="controls" data-sound-category="loops" loop></audio>
			</div>
		</div>
		<div class="audio-buttons"></div>

		<div class="audio-controls">
			<header>
				<h3>Loop player</h3>
			</header>
			<div class="audio-control-buttons">
				<button id="prev-button" name="previous" type="button">
